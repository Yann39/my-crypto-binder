<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycryptobinder">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /-->

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_portfolio">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddAppSettingActivity"
            android:label="@string/title_add_app_setting" />
        <activity
            android:name=".activities.AddTransactionActivity"
            android:label="@string/title_add_transaction" />
        <activity
            android:name=".activities.AddCurrencyActivity"
            android:label="@string/title_add_currency" />
        <activity
            android:name=".activities.AddExchangeActivity"
            android:label="@string/title_add_exchange" />
        <activity
            android:name=".activities.AddIcoActivity"
            android:label="@string/title_add_ico" />
        <activity
            android:name=".activities.AppSettingListActivity"
            android:label="@string/title_app_setting_list" />
        <activity
            android:name=".activities.CurrencyListActivity"
            android:label="@string/title_currency_list" />
        <activity
            android:name=".activities.ExchangeListActivity"
            android:label="@string/title_exchange_list" />
        <activity
            android:name=".activities.EditCurrencyActivity"
            android:label="@string/title_edit_currency" />
        <activity
            android:name=".activities.EditExchangeActivity"
            android:label="@string/title_edit_exchange" />
        <activity
            android:name=".activities.EditIcoActivity"
            android:label="@string/title_edit_ico" />
        <activity
            android:name=".activities.EditTransactionActivity"
            android:label="@string/title_edit_transaction" />
        <activity
            android:name=".activities.SynchronizeExchangesActivity"
            android:label="@string/title_exchange_synchronization" />
        <activity
            android:name=".activities.BackupRestoreActivity"
            android:label="@string/title_backup_restore" />
    </application>

</manifest>