<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/primaryLightRed" android:startColor="@color/primaryRed" />
            <stroke android:width="1dp" android:color="@color/primaryDarkRed" />
            <corners android:radius="3dp" />
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/primaryRed" android:startColor="@color/primaryLightRed" />
            <stroke android:width="1dp" android:color="@color/primaryDarkRed" />
            <corners android:radius="3dp" />
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/primaryRed" android:startColor="@color/primaryLightRed" />
            <stroke android:width="1dp" android:color="@color/primaryDarkRed" />
            <corners android:radius="3dp" />
            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape>
    </item>
</selector>