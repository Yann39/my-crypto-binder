<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp">

    <TextView
        android:id="@+id/transaction_item_id_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/transaction_item_type_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/transaction_item_pair_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="2"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/transaction_item_quantity_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="2"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/transaction_item_price_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="2"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/transaction_item_total_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="2"
        android:textAlignment="textStart" />

</LinearLayout>