<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/colorDark80"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:id="@+id/transaction_item_id_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/transaction_item_pair_textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/transaction_item_quantity_textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/transaction_item_price_textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/transaction_item_total_textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:textColor="@color/white" />

</LinearLayout>